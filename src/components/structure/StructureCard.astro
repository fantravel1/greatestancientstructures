---
interface Props {
  structure: {
    id: string;
    name: string;
    slug: string;
    tagline: string;
    summary: string;
    category: string;
    country: string;
    dates: { age: string };
    stats: { largestStone?: string };
    heroImage: string;
    trending?: boolean;
  };
  variant?: 'default' | 'featured' | 'compact';
  index?: number;
}

const { structure, variant = 'default', index = 0 } = Astro.props;
const base = import.meta.env.BASE_URL;

const categoryColors: Record<string, { badge: string; accent: string }> = {
  megalithic: { badge: 'badge-gold', accent: 'from-gold-400/20 to-gold-600/10' },
  'rock-cut': { badge: 'badge-mystic', accent: 'from-mystic-400/20 to-mystic-600/10' },
  impossible: { badge: 'badge-gold', accent: 'from-gold-400/20 to-gold-600/10' },
  disputed: { badge: 'badge-stone', accent: 'from-stone-400/20 to-stone-600/10' },
};

const colorConfig = categoryColors[structure.category] || categoryColors.disputed;
---

<article
  class:list={[
    'group relative overflow-hidden rounded-2xl',
    'bg-gradient-to-br from-obsidian-900/90 to-obsidian-900/70',
    'backdrop-blur-md border border-obsidian-700/50',
    'transition-all duration-500 ease-out',
    'hover:border-gold-400/40 hover:shadow-2xl hover:shadow-gold-400/5 hover:-translate-y-1',
    variant === 'featured' && 'md:col-span-2 md:row-span-2',
  ]}
  style={`animation: reveal 0.5s ease-out forwards; animation-delay: ${index * 100}ms; opacity: 0;`}
>
  <!-- Hover glow effect -->
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-gold-400/[0.08] via-transparent to-mystic-500/[0.05] opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

  <!-- Image Container -->
  <div class:list={[
    'relative overflow-hidden bg-obsidian-800',
    variant === 'featured' ? 'aspect-[16/10] md:aspect-[16/9]' : variant === 'compact' ? 'aspect-[4/3]' : 'aspect-[4/3]'
  ]}>
    <img
      src={structure.heroImage}
      alt={structure.name}
      loading="lazy"
      decoding="async"
      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
      onerror="this.style.display='none'; this.parentElement.querySelector('.img-fallback').style.display='flex';"
    />
    <!-- Fallback for broken images -->
    <div class="img-fallback hidden absolute inset-0 bg-gradient-to-br from-obsidian-800 to-obsidian-900 items-center justify-center">
      <div class={`w-20 h-20 rounded-2xl bg-gradient-to-br ${colorConfig.accent} flex items-center justify-center`}>
        <svg class="w-10 h-10 text-gold-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
    </div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-obsidian-950 via-obsidian-950/60 to-transparent"></div>

    <!-- Category Badge -->
    <div class="absolute top-4 left-4 flex items-center gap-2 z-10">
      <span class={`${colorConfig.badge} backdrop-blur-sm`}>
        {structure.category}
      </span>
      {structure.trending && (
        <span class="badge bg-red-500/20 text-red-400 border border-red-500/30 backdrop-blur-sm">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
          </svg>
          Hot
        </span>
      )}
    </div>

    <!-- Age Badge -->
    <div class="absolute top-4 right-4 z-10">
      <span class="text-xs font-bold text-gold-400 bg-obsidian-950/80 px-3 py-1.5 rounded-full backdrop-blur-sm border border-gold-400/20">
        {structure.dates.age}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class:list={[
    'relative p-5',
    variant === 'featured' && 'md:p-7',
    variant === 'compact' && 'p-4'
  ]}>
    <!-- Location -->
    <div class="flex items-center gap-2 text-stone-400 text-sm mb-3">
      <svg class="w-4 h-4 text-gold-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      <span class="font-medium">{structure.country}</span>
    </div>

    <!-- Title -->
    <h3 class:list={[
      'font-bold text-stone-100 group-hover:text-gold-400 transition-colors duration-300 line-clamp-1',
      variant === 'featured' ? 'text-xl md:text-2xl' : variant === 'compact' ? 'text-base' : 'text-lg'
    ]}>
      {structure.name}
    </h3>

    <!-- Tagline -->
    <p class:list={[
      'text-stone-400 mt-2 line-clamp-1',
      variant === 'compact' ? 'text-xs' : 'text-sm'
    ]}>
      {structure.tagline}
    </p>

    <!-- Summary (featured only) -->
    {variant === 'featured' && (
      <p class="text-sm text-stone-500 mt-4 line-clamp-2 hidden md:block leading-relaxed">
        {structure.summary}
      </p>
    )}

    <!-- Stats -->
    {structure.stats.largestStone && variant !== 'compact' && (
      <div class="flex items-center gap-4 mt-5 pt-5 border-t border-obsidian-700/50">
        <div class="flex items-center gap-2 text-xs text-stone-500">
          <svg class="w-4 h-4 text-gold-400/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          <span>Largest stone: <span class="text-stone-300 font-medium">{structure.stats.largestStone}</span></span>
        </div>
      </div>
    )}

    <!-- Arrow indicator on hover -->
    <div class="absolute bottom-5 right-5 w-10 h-10 rounded-full bg-gold-400/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-2 group-hover:translate-x-0">
      <svg class="w-5 h-5 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </div>
  </div>

  <!-- Full Card Link -->
  <a
    href={`${base}structures/${structure.slug}`}
    class="absolute inset-0 z-20"
    aria-label={`Explore ${structure.name}`}
  >
    <span class="sr-only">Read more about {structure.name}</span>
  </a>
</article>
