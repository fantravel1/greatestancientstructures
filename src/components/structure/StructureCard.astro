---
interface Props {
  structure: {
    id: string;
    name: string;
    slug: string;
    tagline: string;
    summary: string;
    category: string;
    country: string;
    dates: { age: string };
    stats: { largestStone?: string };
    heroImage: string;
    trending?: boolean;
  };
  variant?: 'default' | 'featured' | 'compact';
  index?: number;
}

const { structure, variant = 'default', index = 0 } = Astro.props;

const categoryColors: Record<string, string> = {
  megalithic: 'badge-gold',
  'rock-cut': 'badge-mystic',
  impossible: 'badge-gold',
  disputed: 'badge-stone',
};
---

<article
  class:list={[
    'group relative card card-hover card-glow overflow-hidden',
    variant === 'featured' && 'md:col-span-2 md:row-span-2',
  ]}
  style={`animation-delay: ${index * 100}ms`}
>
  <!-- Image Container -->
  <div class:list={[
    'relative overflow-hidden',
    variant === 'featured' ? 'aspect-[16/10] md:aspect-[16/9]' : 'aspect-card'
  ]}>
    <img
      src={structure.heroImage}
      alt={structure.name}
      loading="lazy"
      decoding="async"
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
    />

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-obsidian-950 via-obsidian-950/50 to-transparent"></div>

    <!-- Category Badge -->
    <div class="absolute top-4 left-4 flex items-center gap-2">
      <span class={categoryColors[structure.category] || 'badge-stone'}>
        {structure.category}
      </span>
      {structure.trending && (
        <span class="badge bg-red-500/20 text-red-400 border-red-500/30">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
          </svg>
          Trending
        </span>
      )}
    </div>

    <!-- Age Badge -->
    <div class="absolute top-4 right-4">
      <span class="text-xs font-bold text-gold-400 bg-obsidian-950/80 px-2 py-1 rounded-full backdrop-blur-sm">
        {structure.dates.age}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class:list={[
    'relative p-5',
    variant === 'featured' && 'md:p-6'
  ]}>
    <!-- Location -->
    <div class="flex items-center gap-2 text-stone-400 text-sm mb-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      <span>{structure.country}</span>
    </div>

    <!-- Title -->
    <h3 class:list={[
      'font-bold text-stone-100 group-hover:text-gold-400 transition-colors line-clamp-1',
      variant === 'featured' ? 'text-xl md:text-2xl' : 'text-lg'
    ]}>
      {structure.name}
    </h3>

    <!-- Tagline -->
    <p class="text-sm text-stone-400 mt-1 line-clamp-1">
      {structure.tagline}
    </p>

    <!-- Summary (featured only) -->
    {variant === 'featured' && (
      <p class="text-sm text-stone-500 mt-3 line-clamp-2 hidden md:block">
        {structure.summary}
      </p>
    )}

    <!-- Stats -->
    {structure.stats.largestStone && variant !== 'compact' && (
      <div class="flex items-center gap-4 mt-4 pt-4 border-t border-obsidian-700/50">
        <div class="flex items-center gap-2 text-xs text-stone-500">
          <svg class="w-4 h-4 text-gold-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          <span>Largest: {structure.stats.largestStone}</span>
        </div>
      </div>
    )}
  </div>

  <!-- Full Card Link -->
  <a
    href={`/structures/${structure.slug}`}
    class="absolute inset-0"
    aria-label={`Explore ${structure.name}`}
  >
    <span class="sr-only">Read more about {structure.name}</span>
  </a>
</article>
