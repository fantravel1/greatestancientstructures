---
interface Reference {
  id: string;
  authors: string;
  year: number | string;
  title: string;
  publication?: string;
  volume?: string;
  pages?: string;
  doi?: string;
  url?: string;
  type: 'journal' | 'book' | 'report' | 'website' | 'documentary';
}

interface Props {
  references: Reference[];
  title?: string;
  class?: string;
}

const { references, title = 'References & Sources', class: className = '' } = Astro.props;
---

<section class={`py-12 md:py-16 border-t border-obsidian-800/50 ${className}`}>
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-xl font-display font-bold text-stone-100 mb-6 flex items-center gap-3">
        <svg class="w-5 h-5 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        {title}
      </h2>

      <div class="space-y-4">
        {references.map((ref, index) => (
          <div class="group p-4 rounded-xl bg-obsidian-900/30 border border-obsidian-800/50 hover:border-obsidian-700/50 transition-colors">
            <div class="flex gap-4">
              <span class="flex-shrink-0 w-8 h-8 rounded-lg bg-obsidian-800 text-stone-500 flex items-center justify-center text-sm font-mono">
                {index + 1}
              </span>
              <div class="flex-1 min-w-0">
                <p class="text-stone-300 leading-relaxed">
                  <span class="text-stone-100 font-medium">{ref.authors}</span>
                  {' '}({ref.year}).{' '}
                  <em class="text-gold-400/90">{ref.title}</em>.
                  {ref.publication && (
                    <span class="text-stone-400">
                      {' '}{ref.publication}
                      {ref.volume && `, ${ref.volume}`}
                      {ref.pages && `, pp. ${ref.pages}`}
                    </span>
                  )}
                </p>
                {(ref.doi || ref.url) && (
                  <div class="mt-2 flex flex-wrap gap-3">
                    {ref.doi && (
                      <a
                        href={`https://doi.org/${ref.doi}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1 text-xs text-blue-400 hover:text-blue-300 transition-colors"
                      >
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                        DOI: {ref.doi}
                      </a>
                    )}
                    {ref.url && !ref.doi && (
                      <a
                        href={ref.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1 text-xs text-blue-400 hover:text-blue-300 transition-colors"
                      >
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                        View Source
                      </a>
                    )}
                    <span class="text-xs text-stone-600 capitalize">[{ref.type}]</span>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      <p class="mt-6 text-xs text-stone-600 text-center">
        We strive for accuracy. If you find an error, please let us know.
      </p>
    </div>
  </div>
</section>
