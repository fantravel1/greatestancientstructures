---
const navItems = [
  { href: "/", label: "Home", icon: "home" },
  { href: "/structures", label: "Explore", icon: "compass" },
  { href: "/map", label: "Map", icon: "map" },
  { href: "/timeline", label: "Timeline", icon: "clock" },
];

const icons = {
  home: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>`,
  compass: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>`,
  map: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>`,
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>`,
};
---

<nav class="md:hidden fixed bottom-0 left-0 right-0 z-50 bg-obsidian-950/95 backdrop-blur-xl border-t border-obsidian-800/50 safe-bottom">
  <div class="flex items-center justify-around py-2">
    {navItems.map((item) => (
      <a
        href={item.href}
        class="flex flex-col items-center gap-1 px-4 py-2 text-stone-400 hover:text-gold-400 transition-colors group"
      >
        <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[item.icon as keyof typeof icons]} />
        <span class="text-2xs font-medium">{item.label}</span>
      </a>
    ))}
  </div>
</nav>
