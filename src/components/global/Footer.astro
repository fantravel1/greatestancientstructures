---
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;

const footerLinks = {
  explore: [
    { href: `${base}structures`, label: "All Structures" },
    { href: `${base}category/megalithic`, label: "Megalithic Sites" },
    { href: `${base}category/rock-cut`, label: "Rock-Cut Architecture" },
    { href: `${base}category/impossible`, label: '"Impossible" Construction' },
    { href: `${base}category/disputed`, label: "Disputed Origins" },
  ],
  regions: [
    { href: `${base}region/middle-east`, label: "Middle East" },
    { href: `${base}region/south-america`, label: "South America" },
    { href: `${base}region/europe`, label: "Europe" },
    { href: `${base}region/asia`, label: "Asia" },
    { href: `${base}region/africa`, label: "Africa" },
    { href: `${base}region/oceania`, label: "Oceania" },
  ],
  tools: [
    { href: `${base}map`, label: "Interactive Map" },
    { href: `${base}timeline`, label: "Timeline" },
    { href: `${base}compare`, label: "Compare Sites" },
    { href: `${base}quiz`, label: "Knowledge Quiz" },
    { href: `${base}top-10`, label: "Top 10 Mysteries" },
    { href: `${base}travel-guide`, label: "Travel Guide" },
  ],
  resources: [
    { href: `${base}about`, label: "About Us" },
    { href: `${base}faq`, label: "FAQ" },
    { href: `${base}glossary`, label: "Glossary" },
    { href: `${base}discover`, label: "Random Discovery" },
    { href: `${base}rss.xml`, label: "RSS Feed" },
  ],
};
---

<footer class="bg-obsidian-950 border-t border-obsidian-800/50">
  <!-- Main Footer -->
  <div class="container-custom py-16 md:py-20">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-4 lg:col-span-1 mb-8 lg:mb-0">
        <a href={base} class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-gold-400/20 to-gold-600/20 rounded-lg">
            <svg class="w-6 h-6 text-gold-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
          </div>
          <span class="text-lg font-bold text-stone-100">
            Ancient<span class="text-gold-400">Structures</span>
          </span>
        </a>
        <p class="text-sm text-stone-400 mb-6 max-w-xs">
          The definitive resource for humanity's most mysterious and awe-inspiring ancient constructions.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          <a href="#" class="text-stone-500 hover:text-gold-400 transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="#" class="text-stone-500 hover:text-gold-400 transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="#" class="text-stone-500 hover:text-gold-400 transition-colors" aria-label="YouTube">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Link Columns -->
      <div>
        <h3 class="text-sm font-semibold text-gold-400 uppercase tracking-wider mb-4">Explore</h3>
        <ul class="space-y-3">
          {footerLinks.explore.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-stone-100 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gold-400 uppercase tracking-wider mb-4">Regions</h3>
        <ul class="space-y-3">
          {footerLinks.regions.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-stone-100 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gold-400 uppercase tracking-wider mb-4">Tools</h3>
        <ul class="space-y-3">
          {footerLinks.tools.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-stone-100 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gold-400 uppercase tracking-wider mb-4">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-stone-100 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-obsidian-800/50">
    <div class="container-custom py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-stone-500">
        &copy; {currentYear} Greatest Ancient Structures. All rights reserved.
      </p>
      <p class="text-xs text-stone-600">
        Built for lovers of ancient mysteries
      </p>
    </div>
  </div>
</footer>
