    <!-- Navigation -->
    <div class="flex items-center justify-between mt-6 pt-4 border-t border-obsidian-700/50">
      <div class="flex gap-2">
        <button
          @click="prev()"
          class="w-10 h-10 rounded-full bg-obsidian-800/50 hover:bg-obsidian-700 flex items-center justify-center text-stone-400 hover:text-gold-400 transition-all"
          aria-label="Previous fact"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <button
          @click="next()"
          class="w-10 h-10 rounded-full bg-obsidian-800/50 hover:bg-obsidian-700 flex items-center justify-center text-stone-400 hover:text-gold-400 transition-all"
          aria-label="Next fact"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>

      <!-- Dots indicator -->
      <div class="flex gap-1.5">
        <template x-for="(fact, index) in facts" :key="index">
          <button
            @click="currentIndex = index"
            :class="index === currentIndex ? 'bg-gold-400' : 'bg-stone-700 hover:bg-stone-600'"
            class="w-2 h-2 rounded-full transition-colors"
            :aria-label="`Go to fact ${index + 1}`"
          ></button>
        </template>
      </div>
    </div>
  </div>
</div>
