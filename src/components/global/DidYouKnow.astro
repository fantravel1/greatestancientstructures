---

<div
  class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gold-400/10 to-mystic-500/10 border border-gold-400/20 p-6 md:p-8"
  x-data={`{
    facts: ${JSON.stringify(facts)},
    currentIndex: ${facts.indexOf(randomFact)},
    get currentFact() { return this.facts[this.currentIndex]; },
    next() { this.currentIndex = (this.currentIndex + 1) % this.facts.length; },
    prev() { this.currentIndex = (this.currentIndex - 1 + this.facts.length) % this.facts.length; }
  }`}
>
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 w-32 h-32 bg-gold-400/5 rounded-full blur-2xl"></div>

  <div class="relative">
    <!-- Header -->
    <div class="flex items-center gap-2 mb-4">
      <span class="text-2xl" x-text="currentFact.icon">{randomFact.icon}</span>
      <h3 class="text-sm font-bold text-gold-400 uppercase tracking-wider">Did You Know?</h3>
    </div>

    <!-- Fact content -->
    <p
      class="text-lg md:text-xl text-stone-200 font-medium leading-relaxed mb-4"
      x-text="currentFact.fact"
    >
      {randomFact.fact}
    </p>

    <!-- Source structure -->
    <p class="text-sm text-stone-500">
      â€” <span x-text="currentFact.structure" class="text-gold-400/80">{randomFact.structure}</span>
