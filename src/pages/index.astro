---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
import MobileNav from '../components/global/MobileNav.astro';
import StructureCard from '../components/structure/StructureCard.astro';
import DidYouKnow from '../components/global/DidYouKnow.astro';
import StructureOfTheDay from '../components/global/StructureOfTheDay.astro';
import structures from '../data/structures.json';

const base = import.meta.env.BASE_URL;
const featuredStructures = structures.filter(s => s.featured);
const trendingStructures = structures.filter(s => s.trending);
const categories = [
  { id: 'megalithic', name: 'Megalithic', icon: '◈', description: 'Massive stone monuments', count: structures.filter(s => s.category === 'megalithic').length },
  { id: 'rock-cut', name: 'Rock-Cut', icon: '▣', description: 'Carved from living rock', count: structures.filter(s => s.category === 'rock-cut').length },
  { id: 'impossible', name: '"Impossible"', icon: '◎', description: 'Defies explanation', count: structures.filter(s => s.category === 'impossible').length },
  { id: 'disputed', name: 'Disputed', icon: '◇', description: 'Origins debated', count: structures.filter(s => s.category === 'disputed').length },
];
---

<BaseLayout title="Greatest Ancient Structures">
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Premium Background -->
    <div class="absolute inset-0">
      <div class="hero-gradient"></div>
      <div class="hero-pattern"></div>
      <!-- Animated gradient orbs -->
      <div class="absolute top-1/4 -left-32 w-[500px] h-[500px] bg-gold-400/10 rounded-full blur-[120px] animate-pulse" style="animation-duration: 8s"></div>
      <div class="absolute bottom-1/4 -right-32 w-[400px] h-[400px] bg-mystic-500/10 rounded-full blur-[100px] animate-pulse" style="animation-duration: 10s; animation-delay: 2s"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gold-400/5 rounded-full blur-[150px]"></div>
    </div>

    <div class="container-custom relative z-10 pt-28 pb-24 md:pt-36 md:pb-36">
      <div class="max-w-5xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-3 px-5 py-2.5 rounded-full glass mb-10 reveal">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-gold-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-gold-400"></span>
          </span>
          <span class="text-sm font-medium text-stone-300">Exploring humanity's greatest mysteries</span>
        </div>

        <!-- Headline -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-display font-black tracking-tight mb-8 reveal" style="animation-delay: 100ms">
          <span class="block text-stone-100">Ancient Structures</span>
          <span class="block text-gradient-premium mt-2">Beyond Explanation</span>
        </h1>

        <!-- Subheadline -->
        <p class="text-lg sm:text-xl md:text-2xl text-stone-400 max-w-3xl mx-auto mb-12 leading-relaxed reveal" style="animation-delay: 200ms">
          From 12,000-year-old temples built before agriculture to stones so precise
          <span class="text-stone-200 font-medium">a paper can't fit between them.</span>
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-5 reveal" style="animation-delay: 300ms">
          <a href={`${base}structures`} class="btn-primary text-base px-10 py-5 group">
            Start Exploring
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
          <a href={`${base}map`} class="btn-secondary text-base px-10 py-5 group">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            World Map
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-20 pt-16 border-t border-obsidian-800/50 reveal" style="animation-delay: 500ms">
          <div class="text-center group">
            <div class="stat-number group-hover:scale-105 transition-transform">20+</div>
            <div class="stat-label mt-3">Structures</div>
          </div>
          <div class="text-center group">
            <div class="stat-number group-hover:scale-105 transition-transform">12K</div>
            <div class="stat-label mt-3">Years of History</div>
          </div>
          <div class="text-center group">
            <div class="stat-number group-hover:scale-105 transition-transform">6</div>
            <div class="stat-label mt-3">Continents</div>
          </div>
          <div class="text-center group">
            <div class="stat-number group-hover:scale-105 transition-transform">∞</div>
            <div class="stat-label mt-3">Mysteries</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-bounce">
      <span class="text-xs uppercase tracking-widest text-stone-600">Scroll</span>
      <svg class="w-5 h-5 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-24 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian-950 via-obsidian-900/50 to-obsidian-950"></div>
    <div class="container-custom relative z-10">
      <div class="text-center mb-16">
        <span class="section-label mb-4 block">Categories</span>
        <h2 class="section-title mb-6">Explore by Type</h2>
        <p class="section-subtitle mx-auto">
          From megalithic monuments to "impossible" engineering feats
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 stagger-children">
        {categories.map((category) => (
          <a
            href={`${base}category/${category.id}`}
            class="group card card-hover card-glow p-8 text-center"
          >
            <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-gold-400/20 to-gold-600/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
              <span class="text-4xl text-gold-400">{category.icon}</span>
            </div>
            <h3 class="text-xl font-bold text-stone-100 group-hover:text-gold-400 transition-colors mb-2">
              {category.name}
            </h3>
            <p class="text-sm text-stone-500 mb-4">
              {category.description}
            </p>
            <span class="badge-gold">
              {category.count} sites
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Structure of the Day -->
  <section class="py-24 md:py-32 relative">
    <div class="container-custom">
      <StructureOfTheDay />
    </div>
  </section>

  <!-- Featured Structures -->
  <section class="py-24 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian-950 via-obsidian-900/30 to-obsidian-950"></div>
    <div class="container-custom relative z-10">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-14">
        <div>
          <span class="section-label mb-4 block">Collection</span>
          <h2 class="section-title mb-4">Featured Structures</h2>
          <p class="section-subtitle">
            The most awe-inspiring ancient constructions on Earth
          </p>
        </div>
        <a href={`${base}structures`} class="btn-ghost group shrink-0">
          View all structures
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredStructures.slice(0, 6).map((structure, i) => (
          <StructureCard
            structure={structure}
            variant={i === 0 ? 'featured' : 'default'}
            index={i}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Trending / Discovery Section -->
  <section class="py-24 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian-900/50 to-obsidian-950"></div>
    <div class="container-custom relative z-10">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-14">
        <div>
          <div class="badge-gold mb-5 inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
            </svg>
            Trending Now
          </div>
          <h2 class="section-title mb-4">Recent Discoveries</h2>
          <p class="section-subtitle">
            Sites making headlines with new research and discoveries
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {trendingStructures.map((structure, i) => (
          <StructureCard
            structure={structure}
            variant="compact"
            index={i}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Interactive Tools CTA -->
  <section class="py-24 md:py-32">
    <div class="container-custom">
      <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-obsidian-800/80 to-obsidian-900/80 border border-obsidian-700/50 backdrop-blur-sm">
        <!-- Background effects -->
        <div class="absolute inset-0 hero-pattern opacity-30"></div>
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-gold-400/5 rounded-full blur-[100px]"></div>
        <div class="absolute bottom-0 left-0 w-[300px] h-[300px] bg-mystic-500/5 rounded-full blur-[80px]"></div>

        <div class="relative grid md:grid-cols-2 gap-10 p-8 md:p-14 lg:p-20">
          <div>
            <span class="section-label mb-4 block">Interactive</span>
            <h2 class="section-title mb-6">
              Explore Our <span class="text-gradient">Tools</span>
            </h2>
            <p class="text-stone-400 mb-10 text-lg leading-relaxed">
              Dive deeper with our interactive world map, timeline slider, and comparison tools. Visualize 12,000 years of human achievement.
            </p>
            <div class="flex flex-wrap gap-4">
              <a href={`${base}map`} class="btn-primary">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
                World Map
              </a>
              <a href={`${base}timeline`} class="btn-secondary">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Timeline
              </a>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-5">
            <a href={`${base}map`} class="card card-hover p-6 text-center group">
              <div class="w-14 h-14 mx-auto mb-4 rounded-xl bg-gold-400/10 flex items-center justify-center group-hover:bg-gold-400/20 transition-colors">
                <svg class="w-7 h-7 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
              </div>
              <h3 class="font-bold text-stone-200 mb-1">Interactive Map</h3>
              <p class="text-xs text-stone-500">Filter by category & region</p>
            </a>
            <a href={`${base}timeline`} class="card card-hover p-6 text-center group">
              <div class="w-14 h-14 mx-auto mb-4 rounded-xl bg-mystic-500/10 flex items-center justify-center group-hover:bg-mystic-500/20 transition-colors">
                <svg class="w-7 h-7 text-mystic-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="font-bold text-stone-200 mb-1">Timeline</h3>
              <p class="text-xs text-stone-500">Slide through 12,000 years</p>
            </a>
            <a href={`${base}compare`} class="card card-hover p-6 text-center group">
              <div class="w-14 h-14 mx-auto mb-4 rounded-xl bg-gold-400/10 flex items-center justify-center group-hover:bg-gold-400/20 transition-colors">
                <svg class="w-7 h-7 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 class="font-bold text-stone-200 mb-1">Compare Sites</h3>
              <p class="text-xs text-stone-500">Side-by-side analysis</p>
            </a>
            <a href={`${base}quiz`} class="card card-hover p-6 text-center group">
              <div class="w-14 h-14 mx-auto mb-4 rounded-xl bg-mystic-500/10 flex items-center justify-center group-hover:bg-mystic-500/20 transition-colors">
                <svg class="w-7 h-7 text-mystic-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <h3 class="font-bold text-stone-200 mb-1">Knowledge Quiz</h3>
              <p class="text-xs text-stone-500">Test your expertise</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Did You Know -->
  <section class="py-24 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian-950 via-obsidian-900/30 to-obsidian-950"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto">
        <DidYouKnow />
      </div>
    </div>
  </section>

  <!-- Newsletter / CTA -->
  <section class="py-24 md:py-32 relative">
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian-900/50 to-obsidian-950"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <span class="section-label mb-4 block">Newsletter</span>
        <h2 class="section-title mb-6">Stay Curious</h2>
        <p class="section-subtitle mx-auto mb-10">
          Get the latest discoveries, research updates, and new site additions delivered to your inbox.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            class="input flex-1"
          />
          <button type="submit" class="btn-primary px-8 shrink-0">
            Subscribe
          </button>
        </form>
        <p class="text-xs text-stone-600 mt-5">
          No spam, ever. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <MobileNav />
</BaseLayout>
