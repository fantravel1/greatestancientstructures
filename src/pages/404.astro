---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Page Not Found">
  <Header slot="header" />

  <section class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-lg">
      <!-- Icon -->
      <div class="text-8xl mb-6 animate-float">ğŸ›ï¸</div>

      <!-- Title -->
      <h1 class="text-display-sm font-display font-bold text-stone-100 mb-4">
        Lost in <span class="text-gradient">Time</span>
      </h1>

      <!-- Message -->
      <p class="text-lg text-stone-400 mb-8">
        This ancient page has crumbled to dust. Even the greatest structures can't last forever.
      </p>

      <!-- CTA -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href={base} class="btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Return Home
        </a>
        <a href={`${base}structures`} class="btn-secondary">
          Explore Structures
        </a>
      </div>

      <!-- 404 Code -->
      <div class="mt-16 text-9xl font-bold text-obsidian-800 select-none">
        404
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
