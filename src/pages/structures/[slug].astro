---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/global/Header.astro';
import Footer from '../../components/global/Footer.astro';
import MobileNav from '../../components/global/MobileNav.astro';
import References from '../../components/global/References.astro';
import SocialShare from '../../components/global/SocialShare.astro';
import RelatedStructures from '../../components/structure/RelatedStructures.astro';
import structures from '../../data/structures.json';
import referencesData from '../../data/references.json';
import deepContent from '../../data/deep-content.json';

export function getStaticPaths() {
  return structures.map(structure => ({
    params: { slug: structure.slug },
    props: { structure }
  }));
}

const { structure } = Astro.props;

// Get deep content for this structure if available
const structureDeepContent = deepContent[structure.slug as keyof typeof deepContent] || null;

// Get references for this structure
const structureRefs = referencesData.structures[structure.id] || [];
const generalRefs = referencesData.general['ancient-engineering'] || [];
const pageReferences = [...structureRefs, ...generalRefs.slice(0, 2)];

const categoryColors: Record<string, string> = {
  megalithic: 'badge-gold',
  'rock-cut': 'badge-mystic',
  impossible: 'badge-gold',
  disputed: 'badge-stone',
};

// Helper function to format sources
function formatSource(source: any): string {
  if (source.type === 'book') {
    return `${source.author}. <em>${source.title}</em>. ${source.publisher}, ${source.year}.${source.isbn ? ` ISBN: ${source.isbn}` : ''}`;
  } else if (source.type === 'journal') {
    const authors = Array.isArray(source.authors) ? source.authors.join(', ') : source.author;
    let citation = `${authors}. "${source.title}." <em>${source.journal}</em>`;
    if (source.volume) citation += ` ${source.volume}`;
    if (source.issue) citation += `(${source.issue})`;
    citation += ` (${source.year})`;
    if (source.pages) citation += `: ${source.pages}`;
    if (source.doi) citation += `. DOI: ${source.doi}`;
    return citation;
  } else if (source.type === 'article') {
    return `${source.author}. "${source.title}." <em>${source.publication}</em>, ${source.year}.`;
  }
  return '';
}
---

<BaseLayout
  title={`${structure.name}: ${structure.tagline}`}
  description={structure.summary}
  image={structure.heroImage}
  type="article"
>
  <Header slot="header" />

  <!-- Hero -->
  <section class="relative min-h-[60vh] md:min-h-[70vh] flex items-end">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={structure.heroImage}
        alt={structure.name}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-obsidian-950 via-obsidian-950/60 to-obsidian-950/20"></div>
    </div>

    <div class="container-custom relative z-10 pb-12 md:pb-16 pt-32">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-stone-400 mb-6">
        <a href="/" class="hover:text-gold-400 transition-colors">Home</a>
        <span>/</span>
        <a href="/structures" class="hover:text-gold-400 transition-colors">Structures</a>
        <span>/</span>
        <span class="text-stone-300">{structure.name}</span>
      </nav>

      <!-- Badges -->
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <span class={categoryColors[structure.category] || 'badge-stone'}>
          {structure.category}
        </span>
        {structure.unesco?.status === 'inscribed' && (
          <span class="badge bg-blue-500/20 text-blue-400 border-blue-500/30">
            UNESCO {structure.unesco.year}
          </span>
        )}
        <span class="badge bg-stone-700/50 text-stone-300 border-stone-600/50">
          {structure.country}
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-display-md font-display font-bold tracking-tight text-stone-100 mb-4">
        {structure.name}
      </h1>

      <!-- Tagline -->
      <p class="text-xl md:text-2xl text-gold-400 font-medium mb-6">
        {structure.tagline}
      </p>

      <!-- Quick Stats -->
      <div class="flex flex-wrap gap-6 text-sm">
        <div class="flex items-center gap-2 text-stone-300">
          <svg class="w-5 h-5 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>{structure.dates.age}</span>
        </div>
        {structure.stats.largestStone && (
          <div class="flex items-center gap-2 text-stone-300">
            <svg class="w-5 h-5 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <span>Largest stone: {structure.stats.largestStone}</span>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="py-12 md:py-16">
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Summary -->
          <div>
            <h2 class="text-2xl font-bold text-stone-100 mb-4">Overview</h2>
            <p class="text-lg text-stone-300 leading-relaxed">
              {structure.summary}
            </p>
          </div>

          <!-- Deep Dive Introduction (if available) -->
          {structureDeepContent?.deepDive && (
            <div class="card p-6 md:p-8 border-l-4 border-gold-400">
              <h3 class="text-xl font-bold text-stone-100 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
                Deep Dive
              </h3>
              <p class="text-stone-300 leading-relaxed">
                {structureDeepContent.deepDive.introduction}
              </p>
            </div>
          )}

          <!-- Deep Dive Sections -->
          {structureDeepContent?.deepDive?.sections && (
            <div class="space-y-8">
              {structureDeepContent.deepDive.sections.map((section) => (
                <div>
                  <h3 class="text-xl font-bold text-stone-100 mb-3">{section.title}</h3>
                  <p class="text-stone-300 leading-relaxed">{section.content}</p>
                </div>
              ))}
            </div>
          )}

          <!-- Key Facts -->
          <div class="card p-6 md:p-8">
            <h3 class="text-xl font-bold text-stone-100 mb-6">Key Facts</h3>
            <div class="grid sm:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div>
                  <dt class="text-sm text-stone-500 uppercase tracking-wider">Constructed</dt>
                  <dd class="text-lg text-stone-200 font-medium">{structure.dates.constructed}</dd>
                </div>
                <div>
                  <dt class="text-sm text-stone-500 uppercase tracking-wider">Period</dt>
                  <dd class="text-lg text-stone-200 font-medium">{structure.dates.period}</dd>
                </div>
                <div>
                  <dt class="text-sm text-stone-500 uppercase tracking-wider">Discovered</dt>
                  <dd class="text-lg text-stone-200 font-medium">{structure.dates.discovered}</dd>
                </div>
              </div>
              <div class="space-y-4">
                {Object.entries(structure.stats).map(([key, value]) => (
                  <div>
                    <dt class="text-sm text-stone-500 uppercase tracking-wider">{key.replace(/([A-Z])/g, ' $1').trim()}</dt>
                    <dd class="text-lg text-stone-200 font-medium">{value}</dd>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Timeline (if available) -->
          {structureDeepContent?.timeline && structureDeepContent.timeline.length > 0 && (
            <div>
              <h2 class="text-2xl font-bold text-stone-100 mb-6 flex items-center gap-3">
                <svg class="w-6 h-6 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Timeline
              </h2>
              <div class="relative">
                <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-obsidian-700"></div>
                <div class="space-y-6">
                  {structureDeepContent.timeline.map((event, i) => (
                    <div class="relative flex gap-6 pl-10">
                      <div class="absolute left-2.5 w-3 h-3 rounded-full bg-gold-400 mt-1.5"></div>
                      <div class="flex-1">
                        <span class="text-gold-400 font-bold text-sm">{event.year}</span>
                        <p class="text-stone-300">{event.event}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          )}

          <!-- Mysteries -->
          <div>
            <h2 class="text-2xl font-bold text-stone-100 mb-6 flex items-center gap-3">
              <span class="text-gold-400">?</span>
              Unsolved Mysteries
            </h2>
            <div class="space-y-4">
              {structure.mysteries.map((mystery, i) => (
                <div class="flex gap-4 p-4 rounded-xl bg-obsidian-900/50 border border-obsidian-800/50">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gold-400/10 text-gold-400 flex items-center justify-center font-bold text-sm">
                    {i + 1}
                  </div>
                  <p class="text-stone-300">{mystery}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Videos Section (if available) -->
          {structureDeepContent?.videos && structureDeepContent.videos.length > 0 && (
            <div>
              <h2 class="text-2xl font-bold text-stone-100 mb-6 flex items-center gap-3">
                <svg class="w-6 h-6 text-gold-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                </svg>
                Documentaries & Videos
              </h2>
              <div class="grid gap-6">
                {structureDeepContent.videos.map((video) => (
                  <div class="card overflow-hidden">
                    <div class="aspect-video">
                      <iframe
                        src={`https://www.youtube.com/embed/${video.youtubeId}`}
                        title={video.title}
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                        class="w-full h-full"
                        loading="lazy"
                      ></iframe>
                    </div>
                    <div class="p-4">
                      <h4 class="font-bold text-stone-100 mb-1">{video.title}</h4>
                      <div class="flex items-center gap-3 text-sm text-stone-500">
                        <span>{video.source}</span>
                        <span>•</span>
                        <span>{video.duration}</span>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Academic Sources (if available) -->
          {structureDeepContent?.sources && structureDeepContent.sources.length > 0 && (
            <div class="card p-6 md:p-8 bg-obsidian-900/30">
              <h3 class="text-xl font-bold text-stone-100 mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                Academic Sources & Further Reading
              </h3>
              <div class="space-y-4">
                {structureDeepContent.sources.map((source) => (
                  <div class="border-l-2 border-obsidian-700 pl-4 py-1">
                    <div class="flex items-start gap-3">
                      <span class={`text-xs font-bold uppercase tracking-wider px-2 py-0.5 rounded ${
                        source.type === 'book' ? 'bg-blue-500/20 text-blue-400' :
                        source.type === 'journal' ? 'bg-emerald-500/20 text-emerald-400' :
                        'bg-amber-500/20 text-amber-400'
                      }`}>
                        {source.type}
                      </span>
                    </div>
                    <p class="text-stone-300 text-sm mt-2 leading-relaxed" set:html={formatSource(source)} />
                    {source.url && (
                      <a href={source.url} target="_blank" rel="noopener noreferrer" class="text-gold-400 text-sm hover:underline mt-1 inline-block">
                        Read article →
                      </a>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="space-y-8">
          <!-- Quick Navigation (if deep content exists) -->
          {structureDeepContent && (
            <div class="card p-6 sticky top-24">
              <h3 class="text-lg font-bold text-stone-100 mb-4">On This Page</h3>
              <nav class="space-y-2 text-sm">
                <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Overview</a>
                {structureDeepContent.deepDive && (
                  <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Deep Dive</a>
                )}
                <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Key Facts</a>
                {structureDeepContent.timeline && (
                  <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Timeline</a>
                )}
                <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Mysteries</a>
                {structureDeepContent.videos && (
                  <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Videos</a>
                )}
                {structureDeepContent.sources && (
                  <a href="#" class="block text-stone-400 hover:text-gold-400 transition-colors">Sources</a>
                )}
              </nav>
            </div>
          )}

          <!-- Visit Info -->
          <div class="card p-6">
            <h3 class="text-lg font-bold text-stone-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              </svg>
              Visit Info
            </h3>
            <dl class="space-y-4 text-sm">
              <div>
                <dt class="text-stone-500">Nearest City</dt>
                <dd class="text-stone-200 font-medium">{structure.travel.nearestCity}</dd>
              </div>
              <div>
                <dt class="text-stone-500">Entry Fee</dt>
                <dd class="text-stone-200 font-medium">{structure.travel.entryFee}</dd>
              </div>
              <div>
                <dt class="text-stone-500">Best Season</dt>
                <dd class="text-stone-200 font-medium">{structure.travel.bestSeason.join(', ')}</dd>
              </div>
              <div>
                <dt class="text-stone-500">Coordinates</dt>
                <dd class="text-stone-200 font-medium font-mono text-xs">
                  {structure.coordinates[0].toFixed(4)}°, {structure.coordinates[1].toFixed(4)}°
                </dd>
              </div>
            </dl>
            <div class="mt-6 pt-6 border-t border-obsidian-700/50">
              <a
                href={`https://www.google.com/maps?q=${structure.coordinates[0]},${structure.coordinates[1]}`}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-secondary w-full justify-center text-sm"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
                View on Google Maps
              </a>
            </div>
          </div>

          <!-- UNESCO Status -->
          {structure.unesco?.status && (
            <div class="card p-6 bg-blue-950/30 border-blue-900/30">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 rounded-full bg-blue-500/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                    <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-blue-300">UNESCO World Heritage</h3>
                  <p class="text-sm text-blue-400/70">
                    {structure.unesco.status === 'inscribed' ? `Inscribed ${structure.unesco.year}` : 'Tentative List'}
                  </p>
                </div>
              </div>
            </div>
          )}

          <!-- Share -->
          <div class="card p-6">
            <h3 class="text-lg font-bold text-stone-100 mb-2">Share This</h3>
            <SocialShare
              title={`${structure.name}: ${structure.tagline}`}
              description={structure.summary}
              hashtags={['AncientHistory', structure.category, structure.country.replace(/\s+/g, '')]}
            />
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- References -->
  {pageReferences.length > 0 && (
    <References references={pageReferences} title={`References for ${structure.name}`} />
  )}

  <!-- Related Structures -->
  <section class="py-12 md:py-16 bg-obsidian-900/30">
    <div class="container-custom">
      <RelatedStructures
        currentSlug={structure.slug}
        category={structure.category}
        region={structure.region}
        limit={4}
      />
    </div>
  </section>

  <Footer slot="footer" />
  <MobileNav />
</BaseLayout>
